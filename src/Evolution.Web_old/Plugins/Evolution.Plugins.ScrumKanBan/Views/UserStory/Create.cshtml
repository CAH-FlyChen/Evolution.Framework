@model Evolution.Plugins.ScrumKanBan.Models.UserStoryViewModel
@{
    Layout = "";
}


<form asp-action="Create" id="StoryItemCreateForm">
    <div style="padding:10px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="ListID" />
        <div class="form-group">
            <label asp-for="Title">标题</label>
            <input asp-for="Title" class="form-control">
        </div> 
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="ItemTypeCode" class="col-sm-2 control-label">类型</label>
                <div class="col-sm-10">
                        @Html.DropDownListFor(
                        model => model.ItemTypeCode,
                        new SelectList(
                            new List<Object>
                                {
                                    new { value = 0 , text = "用户故事"  },
                                    new { value = 1 , text = "功能" },
                                    new { value = 2 , text = "技术故事"},
                                    new { value = 3 , text = "Bug"}
                                 },
                                "value",
                                "text",
                                Model.ItemTypeCode
                             ), null, new { @class = "form-control" }
                        )
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Point" class="col-sm-2 control-label">点数</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(
                        model => model.Point,
                        new SelectList(
                            new List<Object>
                                {
                                    new { value = 1 , text = "1"  },
                                    new { value = 2 , text = "2" },
                                    new { value = 3 , text = "3"},
                                    new { value = 5 , text = "5"},
                                    new { value = 8 , text = "8"},
                                    new { value = 13 , text = "13"},
                                    new { value = 21, text = "21"},
                                    new { value = 9999 , text = "无穷大"},
                                 },
                                "value",
                                "text",
                                Model.Point
                             ), null, new { @class = "form-control" }
                        )
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Point" class="col-sm-2 control-label">分配给</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(
                        model => model.AssignToID, Model.AssignToList, null, new { @class = "form-control" }
                        )
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StatusCode" class="col-sm-2 control-label">状态</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.DefaultStoryCode, Model.StatusList, "请选择", new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
         </div>

        <div class="form-group">
            <label asp-for="Content">内容</label>
            <textarea asp-for="Content" class="form-control" style="height:100px;width:100%;min-width:100px;max-width:400px;"></textarea>
        </div>

        <div class="form-group" >
            <input id="save" type="submit" value="保存" class="btn btn-default" style="float:right;margin-bottom:10px" />
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
