    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>平台介绍</title>
    <link href="~/Content/css/framework-font.css" rel="stylesheet" />
    <link href="~/Content/css/framework-ui.css" rel="stylesheet" />
    <script src="~/Content/js/jquery/jquery-2.1.1.js"></script>
    <link href="~/Content/css/framework-theme.css" rel="stylesheet" />
    <link href="~/Content/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/framework-theme.css" rel="stylesheet" />
    <link href="~/Content/css/framework-about.css" rel="stylesheet" />
</head>
<body>
    <div class="rows" style="margin-bottom: 1%; border: 1px solid #e6e6e6; overflow: hidden; padding-left: 1px;">
        <div class="panel panel-default">
            <div class="panel-heading">
                Evolution平台介绍
            </div>
            <div class="panel-body">
                ERROR
            </div>
        </div>
    </div>
    <div class="rows" style="margin-bottom: 1%; border: 1px solid #e6e6e6; overflow: hidden; padding-left: 1px;">
        <div class="panel panel-default">
            <div class="panel-heading">
                Evolution技术介绍
            </div>
            <div class="panel-body" style="overflow: hidden;">
                <div style="float: left; width: 50%;">
ERROR
                </div>
                <div style="float: left; width: 50%;">
                    ERROR
                </div>
            </div>
        </div>
    </div>
    <div class="rows" style="margin-bottom: 1%; border: 1px solid #e6e6e6; overflow: hidden; padding-left: 1px;">
        <div class="panel panel-default">
            <div class="panel-heading">
                联系作者
            </div>
            <div class="panel-body">
                <p>
                    赞助作者：觉得对你有帮助，请她和一杯咖啡吧
                    <button type="button" onclick="dashangToggle()" class="btn btn-success btn-xs" style="margin-left: 10px; margin-top: -5px; padding-top: 2px;"><i class="fa fa-rmb" style="padding-right: 5px;"></i>我要打赏</button>
                </p>
                <p>
                    向我提问：欢迎向我提问，由于个人精力有限，并不是每一个问题都会去回答；邮箱地址：
                    <a href="#">chenflyxp@gmail.com</a>
                </p>
                <p>获取最新源代码：<a href="http://www.oschina.net/p/nfine" target="_blank">http://www.oschina.net/p/nfine</a>、作者QQ：2717247167、技术交流群：549652099</p>
            </div>
        </div>
    </div>
    <div class="weixin">
        <div style="margin-bottom: 5px;">
            扫描二维码，添加我的微信号
        </div>
        <img src="~/Content/img/weixin_nfine.png" style="width: 150px;" alt="微信号" />
    </div>
    <div class="contentpay">
        <div class="hide_box"></div>
        <div class="shang_box">
            <a class="shang_close" href="javascript:void(0)" onclick="dashangToggle()" title="关闭">
                <img src="~/Content/img/button_pm_close.png" alt="取消" /></a>
            <div class="shang_tit">
                <p>感谢您的支持，我会继续努力的!</p>
            </div>
            <div class="shang_payimg">
                <img src="~/Content/img/weipayimg.png" alt="扫码支持" title="扫一扫" />
            </div>
            <div class="pay_explain">扫码打赏，你说多少就多少</div>
            <div class="shang_payselect">
                <div class="pay_item checked" data-id="weipay">
                    <span class="radiobox"></span>
                    <span class="pay_logo">
                        <img src="~/Content/img/wechat.jpg" alt="微信" /></span>
                </div>
                <div class="pay_item" data-id="alipay">
                    <span class="radiobox"></span>
                    <span class="pay_logo">
                        <img src="~/Content/img/alipay.jpg" alt="支付宝" /></span>
                </div>
            </div>
            <div class="shang_info">
                <p>打开<span id="shang_pay_txt">支付宝</span>扫一扫，即可进行扫码打赏哦</p>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $(".pay_item").click(function () {
                $(this).addClass('checked').siblings('.pay_item').removeClass('checked');
                var dataid = $(this).attr('data-id');
                $(".shang_payimg img").attr("src", "/Content/img/" + dataid + "img.png");
                $("#shang_pay_txt").text(dataid == "alipay" ? "支付宝" : "微信");
            });
        });
        function dashangToggle() {
            $(".hide_box").fadeToggle();
            $(".shang_box").fadeToggle();
        }
    </script>
</body>
</html>
