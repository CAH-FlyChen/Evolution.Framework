      "version": "1.0.0-preview2-final",
      "type": "build"
    },
    "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0",
    "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.0.0",
    "Microsoft.Extensions.Configuration.Json": "1.0.0",
    "Microsoft.Extensions.Logging": "1.0.0",
    "Microsoft.Extensions.Logging.Console": "1.0.0",
    "Microsoft.Extensions.Logging.Debug": "1.0.0",
    "Microsoft.Extensions.Options.ConfigurationExtensions": "1.0.0",
    "Microsoft.VisualStudio.Web.BrowserLink.Loader": "14.0.0",
    "Evolution.Framework": "1.0.0-*",
    "Microsoft.AspNet.Authorization": "1.0.0-rc1-final",
    "Microsoft.Extensions.Caching.Memory": "1.0.0",
    "Microsoft.AspNetCore.Session": "1.0.0",
    "System.Text.Encoding.CodePages": "4.0.1",
    "Microsoft.AspNetCore.Identity.EntityFrameworkCore": "1.0.0",
    "Microsoft.AspNetCore.Identity": "1.0.0",
    "Microsoft.EntityFrameworkCore": "1.0.0",
    "Microsoft.EntityFrameworkCore.SqlServer": "1.0.0",
    "Evolution.Application": "1.0.0-*",
    "Evolution.Data": "1.0.0-*",
    "Newtonsoft.Json": "9.0.1",
    "Microsoft.AspNetCore.Mvc.Razor": "1.0.0",
    "SapientGuardian.EntityFrameworkCore.MySql": "7.1.9",
    "Microsoft.Extensions.Caching.Redis.Core": "1.0.2",
    "CoreProfiler": "1.0.3",
    "CoreProfiler.Web": "1.0.3",
    //"System.ServiceModel.Primitives": "4.0.0",
    //"System.ServiceModel.Http": "4.0.0",
    "Evolution.Web.Attributes": "1.0.0-*",
    "Evolution.Web.Abstract": "1.0.0-*",
    "Evolution.Plugins.Abstract": "1.0.0-*",
    "Microsoft.Extensions.DependencyInjection.Abstractions": "1.0.0",
    "AutoMapper": "5.0.2",
    "AutoMapper.Extensions.Microsoft.DependencyInjection": "1.1.2",
    "Evolution.Data.EntityBase": "1.0.0-*",
    "Microsoft.AspNetCore.Authentication.JwtBearer": "1.0.0",
    "Microsoft.AspNetCore.Mvc.Core": "1.0.1",
    "Microsoft.AspNetCore.Mvc.Abstractions": "1.0.1"
  },

  "tools": {
    "BundlerMinifier.Core": "2.0.238",
    "Microsoft.AspNetCore.Razor.Tools": "1.0.0-preview2-final",
    "Microsoft.AspNetCore.Server.IISIntegration.Tools": "1.0.0-preview2-final"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "dotnet5.6",
        "portable-net45+win8"
      ]
    }
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true
  },
  "runtimes": { //runtime
    "ubuntu.14.04-x64": {},
    "win10-x64": {}
  },
  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "publishOptions": {
    "include": [
      "wwwroot",
      "Views",
      "Areas/**/*.cshtml",
      "appsettings.json",
      "web.config",
      "coreprofiler.json"
    ]
  },

  "scripts": {
    "prepublish": [ "bower install", "dotnet bundle" ],
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
  }
}
